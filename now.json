{
    "version": 2,
    "builds": [
        { "src": "*.js", "use": "@now/node" }
    ],
    "routes": 
    [
        {
            "src": "/",
            "dest": "/index.js",
            "methods": ["GET"]
        },
        {
            "src": "/home",
            "dest": "/index.js",
            "methods": ["GET"]
        },
        {
            "src": "/home",
            "dest": "/index.js",
            "methods": ["POST"]
        },
        {
            "src": "/edit",
            "dest": "/index.js",
            "methods": ["DELETE"]
        },
        {
            "src": "/edit",
            "dest": "/index.js",
            "methods": ["PUT"]
        }
    
    ]
    
}