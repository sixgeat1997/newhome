{
    "version": 2,
    "builds": [
        { "src": "*.js", "use": "@now/node" }
    ],
    "routes": 
    [
        {
            "src": "/api/",
            "dest": "/index.js",
            "methods": ["GET"]
        },
        {
            "src": "/api/home",
            "dest": "/index.js",
            "methods": ["GET"]
        },
        {
            "src": "/api/home",
            "dest": "/index.js",
            "methods": ["POST"]
        },
        {
            "src": "/api/edit",
            "dest": "/index.js",
            "methods": ["DELETE"]
        },
        {
            "src": "/api/edit",
            "dest": "/index.js",
            "methods": ["PUT"]
        },
        {
            "src": "/search/price",
            "dest": "/index.js",
            "methods": ["GET"]
        },
        {
            "src": "/search/category",
            "dest": "/index.js",
            "methods": ["GET"]
        }
    
    ]
    
}